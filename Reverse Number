/**
 *
 * @author Harshali
 */
public class Resversnumber {
    
    public static void main (String [] arg)
    
    {
        int num;
        int revrsnum=0;
         System.out.println("enter the number to revers:");
         
         Scanner sc =new Scanner(System.in);
         
         num=sc.nextInt();
         int i=0;
         while(num!=0)
         {
             revrsnum=revrsnum*10;
             revrsnum=revrsnum+num%10;
             num=num/10;
         }
      System.out.println("Revers number is"+"  "+revrsnum);   
    }
}
